[user]
	email = tureba@gmail.com
	name = Arthur Nascimento
[core]
	editor = vim
	whitespace = trailing-space,space-before-tab,cr-at-eol
	sharedRepository = group
	safecrlf = true
[color]
	branch = auto
	diff = auto
	interactive = auto
	grep = auto
	status = auto
	ui = auto
[apply]
	whitespace = fix
[diff]
	renames = copy
[i18n]
	commitEncoding = utf-8
	logOutputEncoding = utf-8
[push]
	default = simple
[alias]
	puhs = push
	statsu = status
	staus = status
[rebase]
	autostash = yes
	autosquash = yes
[pull]
	rebase = true
